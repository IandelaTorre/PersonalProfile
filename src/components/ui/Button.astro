---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  variant?: "primary" | "secondary" | "outline" | "ghost";
  type?: any;
}

const { href, variant = "primary", class: className, ...rest } = Astro.props;

const baseClasses =
  "py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent disabled:opacity-50 disabled:pointer-events-none transition-all duration-200 cursor-pointer";

const variants = {
  primary:
    "bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800",
  secondary:
    "bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-white/10 dark:text-white dark:hover:bg-white/20",
  outline:
    "border-gray-200 text-gray-500 hover:border-blue-600 hover:text-blue-600 dark:border-neutral-700 dark:text-neutral-400 dark:hover:text-blue-500",
  ghost:
    "text-blue-600 hover:text-blue-800 dark:text-blue-500 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20",
};

const Tag = href ? "a" : "button";
---

<Tag
  href={href}
  class:list={[baseClasses, variants[variant], className]}
  {...rest}
>
  <slot />
</Tag>
