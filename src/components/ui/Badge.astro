---
interface Props {
  label: string;
  color?:
    | "blue"
    | "indigo"
    | "purple"
    | "pink"
    | "red"
    | "orange"
    | "amber"
    | "yellow"
    | "lime"
    | "green"
    | "emerald"
    | "teal"
    | "cyan"
    | "sky"
    | "slate"
    | "gray"
    | "zinc"
    | "neutral"
    | "stone";
  class?: string;
}

const { label, color = "blue", class: className } = Astro.props;

const colorClasses: Record<string, string> = {
  // Vibrant Colors (Softened)
  blue: "bg-blue-50 text-blue-700 dark:bg-blue-500/15 dark:text-blue-200",
  indigo:
    "bg-indigo-50 text-indigo-700 dark:bg-indigo-500/15 dark:text-indigo-200",
  purple:
    "bg-purple-50 text-purple-700 dark:bg-purple-500/15 dark:text-purple-200",
  pink: "bg-pink-50 text-pink-700 dark:bg-pink-500/15 dark:text-pink-200",
  red: "bg-rose-50 text-rose-700 dark:bg-rose-500/15 dark:text-rose-200", // Mapped to Rose
  orange:
    "bg-orange-50 text-orange-700 dark:bg-orange-500/15 dark:text-orange-200",
  amber: "bg-amber-50 text-amber-700 dark:bg-amber-500/15 dark:text-amber-200",
  yellow: "bg-amber-50 text-amber-700 dark:bg-amber-500/15 dark:text-amber-200", // Mapped to Amber
  lime: "bg-lime-50 text-lime-700 dark:bg-lime-500/15 dark:text-lime-200",
  green:
    "bg-emerald-50 text-emerald-700 dark:bg-emerald-500/15 dark:text-emerald-200", // Mapped to Emerald
  emerald:
    "bg-emerald-50 text-emerald-700 dark:bg-emerald-500/15 dark:text-emerald-200",
  teal: "bg-teal-50 text-teal-700 dark:bg-teal-500/15 dark:text-teal-200",
  cyan: "bg-cyan-50 text-cyan-700 dark:bg-cyan-500/15 dark:text-cyan-200",
  sky: "bg-sky-50 text-sky-700 dark:bg-sky-500/15 dark:text-sky-200",

  // Sober / Modern Colors
  slate: "bg-slate-50 text-slate-700 dark:bg-slate-500/15 dark:text-slate-200",
  gray: "bg-gray-50 text-gray-700 dark:bg-gray-500/15 dark:text-gray-200",
  zinc: "bg-zinc-50 text-zinc-700 dark:bg-zinc-500/15 dark:text-zinc-200",
  neutral:
    "bg-neutral-50 text-neutral-700 dark:bg-neutral-500/15 dark:text-neutral-200",
  stone: "bg-stone-50 text-stone-700 dark:bg-stone-500/15 dark:text-stone-200",
};

const badgeClasses = colorClasses[color] ?? colorClasses.blue;
---

<span
  class:list={[
    "inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-xs font-medium",
    badgeClasses,
    className,
  ]}
>
  {label}
</span>
