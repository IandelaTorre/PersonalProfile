---
interface Props {
  label: string;
  color?:
    | 'blue'
    | 'gray'
    | 'teal'
    | 'red'
    | 'yellow'
    | 'purple'
    | 'indigo'
    | 'sky'
    | 'emerald'
    | 'amber'
    | 'rose'
    | 'slate';
  class?: string;
}

const { label, color = 'blue', class: className } = Astro.props;

const colorClasses: Record<string, string> = {
  blue:   "bg-blue-100 text-blue-800 dark:bg-blue-800/30 dark:text-blue-400",
  gray:   "bg-gray-100 text-gray-800 dark:bg-white/10 dark:text-white",
  teal:   "bg-teal-100 text-teal-800 dark:bg-teal-800/30 dark:text-teal-400",
  red:    "bg-red-100 text-red-800 dark:bg-red-800/30 dark:text-red-400",
  yellow: "bg-yellow-100 text-yellow-800 dark:bg-yellow-800/30 dark:text-yellow-500",
  purple: "bg-purple-100 text-purple-800 dark:bg-purple-800/30 dark:text-purple-400",

  // nuevos colores
  indigo:  "bg-indigo-100 text-indigo-800 dark:bg-indigo-800/30 dark:text-indigo-400",
  sky:     "bg-sky-100 text-sky-800 dark:bg-sky-800/30 dark:text-sky-400",
  emerald: "bg-emerald-100 text-emerald-800 dark:bg-emerald-800/30 dark:text-emerald-400",
  amber:   "bg-amber-100 text-amber-800 dark:bg-amber-800/30 dark:text-amber-400",
  rose:    "bg-rose-100 text-rose-800 dark:bg-rose-800/30 dark:text-rose-400",
  slate:   "bg-slate-100 text-slate-800 dark:bg-slate-800/30 dark:text-slate-400",
};
---

<span
  class:list={[
    "inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-xs font-medium",
    colorClasses[color],
    className
  ]}
>
  {label}
</span>
