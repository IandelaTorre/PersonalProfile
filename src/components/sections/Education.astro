---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const education = [
  {
    degree: t('education.ed1.title'),
    school: 'Escuela Superior de Cómputo (ESCOM)',
    year: '2019 - 2024',
    type: 'Formal',
    file: false,
    url: "https://www.escom.ipn.mx/htmls/conocenos/ubicacion.php",
  },
  {
    degree: 'iOS y Swift 5.7  Curso Completo Desde Cero a Profesional',
    school: 'Juan Villalvazo, Brais Moure',
    year: '2024',
    type: 'Course',
    file: true,
    url: "/docs/courses/CertificadoSwift.pdf",
  },
  {
    degree: 'Advanced Programming in Swift',
    school: 'Meta',
    year: '2025',
    type: 'Course',
    file: false,
    url: "https://www.coursera.org/learn/advanced-programming-in-swift/home/module/1",
  },
  {
    degree: 'Aprende a crear apps para iOS 14, iOS 15, iOS 16 y ahora con iOS 17 con SwiftUI, Swift 5.7 y aplicando MVVM',
    school: 'Jorge Maldonado',
    year: '2025',
    type: 'Course',
    file: true,
    url: "/docs/courses/CertificadoJorgeMaldonado.pdf",
  },
  {
    degree: 'iOS Development Masterclass 2026 – SwiftUI, SwiftData, AI',
    school: 'Robert Petras',
    year: '2025',
    type: 'Course',
    file: false,
    url: "https://www.udemy.com/course/swiftui-masterclass-course-ios-development-with-swift/?couponCode=ACCAGE0923",
  },
  {
    degree: 'Introducción a SwiftUI',
    school: 'Angel Gómez',
    year: '2025',
    type: 'Course',
    file: false,
    url: "https://www.udemy.com/course/specktro-introduccion-a-swiftui/?couponCode=ACCAGE0923",
  },
];
---

<section id="education" class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
    <h2 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white">{t('education.title')}</h2>
  </div>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6" id="education-grid">
    {education.map((item) => (
      <div class="spotlight-card relative group flex flex-col bg-white dark:bg-neutral-900 border border-gray-200 dark:border-neutral-800 shadow-sm rounded-xl p-4 md:p-5 overflow-hidden">
        <!-- Spotlight Border -->
        <div class="pointer-events-none absolute -inset-px rounded-xl opacity-0 transition duration-300 group-hover:opacity-100"
             style="background: radial-gradient(600px circle at var(--mouse-x) var(--mouse-y), rgba(59, 130, 246, 0.4), transparent 40%);">
        </div>

        <!-- Content -->
        <div class="relative z-10 flex flex-col h-full">
                <div class="flex-1 flex flex-col">
                    <span class="inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-white/10 dark:text-white mb-3 self-start">
                        {item.type}
                    </span>
                    <h3 class="text-lg font-bold text-gray-800 dark:text-white">
                        {item.degree}
                    </h3>
                    <p class="mt-1 text-gray-500 dark:text-neutral-400">
                        {item.school}
                    </p>
                    <p class="mt-auto text-blue-600 dark:text-blue-400 hover:underline pt-4">
                      <a href={item.url} target="_blank" rel="noopener noreferrer">
                          {t("education.more.title")}
                      </a>
                    </p>
                </div>
            <div class="mt-4 pt-4 border-t border-gray-100 dark:border-neutral-800">
                <p class="text-sm text-gray-500 dark:text-neutral-500">
                    {item.year}
                </p>
            </div>
        </div>
      </div>
    ))}
  </div>
</section>

<script>
  const cards = document.querySelectorAll('.spotlight-card');
  
  cards.forEach(card => {
    card.addEventListener('mousemove', (e: any) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      
      (card as HTMLElement).style.setProperty('--mouse-x', `${x}px`);
      (card as HTMLElement).style.setProperty('--mouse-y', `${y}px`);
    });
  });
</script>
