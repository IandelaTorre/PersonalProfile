---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const experience = [
  {
    role: "Senior iOS Developer",
    company: "Tech Solutions Inc.",
    period: "2022 - Present",
    description:
      lang === "en"
        ? "Leading the iOS team in developing a flagship e-commerce application. Implemented modular architecture using SPM and improved build times by 40%."
        : "Liderando el equipo de iOS en el desarrollo de una aplicación insignia de comercio electrónico. Implementé una arquitectura modular usando SPM y mejoré los tiempos de compilación en un 40%.",
  },
  {
    role: "Full-Stack Developer",
    company: "Creative Agency",
    period: "2020 - 2022",
    description:
      lang === "en"
        ? "Developed web and mobile solutions for various clients. Built RESTful APIs with NestJS and responsive frontends with React."
        : "Desarrollé soluciones web y móviles para varios clientes. Construí APIs RESTful con NestJS y frontends responsivos con React.",
  },
  {
    role: "Freelance Developer",
    company: "Self-employed",
    period: "2018 - 2020",
    description:
      lang === "en"
        ? "Worked on multiple iOS projects for startups. Specialized in UI/UX implementation and CoreAnimation."
        : "Trabajé en múltiples proyectos de iOS para startups. Especializado en implementación de UI/UX y CoreAnimation.",
    badge: "Freelance",
  },
];
---

<section
  id="experience"
  class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto"
>
  <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
    <h2 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white">
      {t("experience.title")}
    </h2>
  </div>

  <div class="max-w-3xl mx-auto">
    {
      experience.map((item, index) => (
        <div class="experience-item flex gap-x-3 opacity-0 translate-y-8">
          <div class="relative last:after:hidden after:absolute after:top-7 after:bottom-0 after:start-3.5 after:w-px after:-translate-x-[0.5px] after:bg-gray-200 dark:after:bg-neutral-700">
            <div class="relative z-10 w-7 h-7 flex justify-center items-center">
              <div class="w-2 h-2 rounded-full bg-gray-400 dark:bg-neutral-600" />
            </div>
          </div>

          <div class="grow pt-0.5 pb-8">
            <div class="flex flex-col sm:flex-row sm:items-center gap-x-2">
              <h3 class="flex gap-x-1.5 font-semibold text-gray-800 dark:text-white">
                {item.role}
                {item.badge && (
                  <span class="inline-flex items-center gap-x-1.5 py-0.5 px-2 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-800/30 dark:text-blue-500">
                    {item.badge}
                  </span>
                )}
              </h3>
              <span class="hidden sm:block text-gray-400 dark:text-neutral-500">
                |
              </span>
              <p class="text-sm text-gray-500 dark:text-neutral-400">
                {item.company}
              </p>
            </div>
            <p class="mt-1 text-sm text-gray-400 dark:text-neutral-500">
              {item.period}
            </p>
            <p class="mt-3 text-gray-600 dark:text-neutral-400">
              {item.description}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Use batch to handle staggering of elements that enter view together
  ScrollTrigger.batch(".experience-item", {
    start: "top 80%",
    onEnter: (elements) => {
      gsap.to(elements, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        stagger: 0.2,
        ease: "power3.out",
      });
    },
    once: true,
  });
</script>
