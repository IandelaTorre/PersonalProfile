---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const experience = [
  {
    role: t("experience.exp1.role"),
    company: t("experience.exp1.title"),
    period: t("experience.exp1.period"),
    description: t("experience.exp1.description"),
    more: t("experience.exp1.more"),
    badge: "Freelance",
  },
  {
    role: t("experience.exp2.role"),
    company: t("experience.exp2.title"),
    period: "2024 - 2025",
    description: t("experience.exp2.description"),
    more: t("experience.exp2.more")
  },
  {
    role: t("experience.exp3.role"),
    company: t("experience.exp3.title"),
    period: "2023 - 2024",
    description: t("experience.exp3.description"),
    more: t("experience.exp3.more"),
    
  },
];
---

<section
  id="experience"
  class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto"
>
  <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
    <h2 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white">
      {t("experience.title")}
    </h2>
  </div>

  <div class="max-w-3xl mx-auto">
    {
      experience.map((item, index) => (
        <div class="experience-item flex gap-x-3 opacity-0 translate-y-8">
          <div class="relative last:after:hidden after:absolute after:top-7 after:bottom-0 after:start-3.5 after:w-px after:-translate-x-[0.5px] after:bg-gray-200 dark:after:bg-neutral-700">
            <div class="relative z-10 w-7 h-7 flex justify-center items-center">
              <div class="w-2 h-2 rounded-full bg-gray-400 dark:bg-neutral-600" />
            </div>
          </div>

          <div class="grow pt-0.5 pb-8">
            <div class="flex flex-col sm:flex-row sm:items-center gap-x-2">
              <h3 class="flex gap-x-1.5 font-semibold text-gray-800 dark:text-white">
                {item.role}
                {item.badge && (
                  <span class="inline-flex items-center gap-x-1.5 py-0.5 px-2 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-800/30 dark:text-blue-500">
                    {item.badge}
                  </span>
                )}
              </h3>
              <span class="hidden sm:block text-gray-400 dark:text-neutral-500">
                |
              </span>
              <p class="text-sm text-gray-500 dark:text-neutral-400">
                {item.company}
              </p>
            </div>
            <p class="mt-1 text-sm text-gray-400 dark:text-neutral-500">
              {item.period}
            </p>
            <p class="mt-3 text-justify text-gray-600 dark:text-neutral-400">
              {item.description}
            </p>
            {item.more && (
              <p class="mt-3 text-justify text-gray-600 dark:text-neutral-400">
                {item.more}
              </p>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Use batch to handle staggering of elements that enter view together
  ScrollTrigger.batch(".experience-item", {
    start: "top 80%",
    onEnter: (elements) => {
      gsap.to(elements, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        stagger: 0.2,
        ease: "power3.out",
      });
    },
    once: true,
  });
</script>
