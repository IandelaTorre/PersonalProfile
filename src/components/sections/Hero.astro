---
import Button from "../ui/Button.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="hero"
  class="relative min-h-screen flex flex-col justify-center items-center overflow-hidden"
>
  <div class="absolute inset-0 z-[-1]">
    <div
      class="absolute top-[-50%] left-[-50%] w-[200%] h-[200%] animate-spin-slow opacity-50 dark:opacity-30 blur-3xl bg-[conic-gradient(from_0deg,transparent_0_340deg,white_360deg)]"
    >
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-br from-blue-100 via-purple-100 to-pink-100 dark:from-neutral-900 dark:via-neutral-900 dark:to-neutral-900 opacity-80"
    >
    </div>
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
      <div
        class="absolute -top-[20%] -left-[10%] w-[70%] h-[70%] rounded-full mix-blend-multiply filter blur-3xl opacity-40 animate-blob bg-purple-300 dark:bg-purple-900"
      >
      </div>
      <div
        class="absolute -top-[20%] -right-[10%] w-[70%] h-[70%] rounded-full mix-blend-multiply filter blur-3xl opacity-40 animate-blob animation-delay-2000 bg-yellow-300 dark:bg-blue-900"
      >
      </div>
      <div
        class="absolute -bottom-[20%] left-[20%] w-[70%] h-[70%] rounded-full mix-blend-multiply filter blur-3xl opacity-40 animate-blob animation-delay-4000 bg-pink-300 dark:bg-indigo-900"
      >
      </div>
    </div>
  </div>

  <div
    class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center"
  >
    <!-- <div class="flex justify-center mb-8">
      <a
        class="inline-flex items-center gap-x-2 bg-white/80 backdrop-blur-sm border border-gray-200 text-sm text-gray-800 p-1 ps-3 rounded-full transition hover:border-gray-300 dark:bg-neutral-800/80 dark:border-neutral-700 dark:text-neutral-200 dark:hover:border-neutral-600 shadow-sm"
        href="#"
      >{t('hero.ready')}
      <span class="py-1.5 px-2.5 inline-flex justify-center items-center gap-x-2 rounded-full bg-gray-200/50 font-semibold text-sm text-gray-600 dark:bg-neutral-700/50 dark:text-neutral-400">
          <svg
            class="flex-shrink-0 w-4 h-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
          >
        </span>
      </a>
    </div> -->

    <div class="max-w-3xl mx-auto">
      <h1
        class="block font-bold text-gray-800 text-5xl md:text-6xl lg:text-7xl dark:text-neutral-200 tracking-tight"
      >
        {t("hero.title")}
      </h1>
    </div>

    <div class="mt-5 max-w-3xl mx-auto">
      <p class="text-xl text-gray-600 dark:text-neutral-400">
        {t("hero.subtitle")}
      </p>
    </div>

    <div class="mt-10 gap-3 flex justify-center">
      <Button href="#projects" variant="primary">
        {t("hero.ctaProjects")}
        <svg
          class="flex-shrink-0 w-4 h-4"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
        >
      </Button>
      <Button href="/docs/resume.pdf" variant="outline" download>
        {t("hero.ctaCV")}
      </Button>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-20 left-1/2 -translate-x-1/2 animate-bounce z-20">
    <a
      href="#experience"
      class="text-gray-400 hover:text-gray-600 dark:text-neutral-500 dark:hover:text-neutral-300 transition-colors"
    >
      <svg
        class="w-6 h-6"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>

  <!-- Bottom Fade Transition -->
  <div
    class="absolute bottom-0 left-0 w-full h-24 bg-gradient-to-t from-white dark:from-neutral-900 to-transparent z-10"
  >
  </div>

  <style>
    @keyframes blob {
      0% {
        transform: translate(0px, 0px) scale(1);
      }
      33% {
        transform: translate(30px, -50px) scale(1.1);
      }
      66% {
        transform: translate(-20px, 20px) scale(0.9);
      }
      100% {
        transform: translate(0px, 0px) scale(1);
      }
    }
    .animate-blob {
      animation: blob 7s infinite;
    }
    .animation-delay-2000 {
      animation-delay: 2s;
    }
    .animation-delay-4000 {
      animation-delay: 4s;
    }
  </style>
</section>
